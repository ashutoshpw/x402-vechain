# =============================================
# VeChain Network Configuration
# =============================================

# Network to use: 'testnet' or 'mainnet'
# Determines which VeChain network the API will connect to
VECHAIN_NETWORK=testnet

# VeChain Mainnet RPC URL
# Used when VECHAIN_NETWORK=mainnet
VECHAIN_MAINNET_RPC=https://mainnet.vechain.org

# VeChain Testnet RPC URL
# Used when VECHAIN_NETWORK=testnet
VECHAIN_TESTNET_RPC=https://testnet.vechain.org

# =============================================
# Fee Delegation Configuration
# =============================================

# Enable or disable fee delegation for transactions
# When enabled, the facilitator pays gas fees on behalf of users
FEE_DELEGATION_ENABLED=true

# Private key for fee delegation account
# Required if FEE_DELEGATION_ENABLED=true
# WARNING: Keep this secret and never commit to version control
# Format: 64-character hexadecimal string (without 0x prefix)
FEE_DELEGATION_PRIVATE_KEY=

# =============================================
# Database Configuration
# =============================================

# Default database connection string
# Used if network-specific URLs are not provided
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/x402_testnet

# Testnet-specific database URL (optional)
# Overrides DATABASE_URL when VECHAIN_NETWORK=testnet
DATABASE_URL_TESTNET=postgresql://user:password@localhost:5432/x402_testnet

# Mainnet-specific database URL (optional)
# Overrides DATABASE_URL when VECHAIN_NETWORK=mainnet
DATABASE_URL_MAINNET=postgresql://user:password@localhost:5432/x402_mainnet

# =============================================
# Authentication & Security
# =============================================

# Secret key for JWT token generation and validation
# WARNING: Keep this secret and never commit to version control
# Generate with: openssl rand -base64 32
JWT_SECRET=

# =============================================
# Rate Limiting Configuration
# =============================================

# Maximum number of requests allowed per IP address per minute
# Helps prevent API abuse and DDoS attacks
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Rate limit time window in milliseconds (default: 15 minutes)
# Optional: Defaults to 900000 (15 minutes) if not set
RATE_LIMIT_WINDOW_MS=900000

# =============================================
# Application Configuration
# =============================================

# Node environment: 'development', 'production', or 'test'
NODE_ENV=development

# API server port
# Optional: Defaults to 3000 if not set
PORT=3000
