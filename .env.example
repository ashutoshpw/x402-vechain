# VeChain Network Configuration
# Network to use: 'mainnet' or 'testnet'
VECHAIN_NETWORK=testnet

# VeChain Mainnet RPC endpoint
# Used for production transactions on the main VeChain network
VECHAIN_MAINNET_RPC=https://mainnet.vechain.org

# VeChain Testnet RPC endpoint
# Used for development and testing on the VeChain test network
VECHAIN_TESTNET_RPC=https://testnet.vechain.org

# Fee Delegation Configuration
# Enable or disable fee delegation (true/false)
# Fee delegation allows a sponsor to pay gas fees for user transactions
FEE_DELEGATION_ENABLED=true

# Fee Delegation Private Key
# Private key of the account that will sponsor transaction fees
# Keep this secure and never commit to version control!
# Example format: 0x1234567890abcdef...
FEE_DELEGATION_PRIVATE_KEY=

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Example: postgresql://user:password@localhost:5432/vechain_db
DATABASE_URL=postgresql://

# Authentication Configuration
# Secret key for signing JWT tokens
# Use a strong, random string (minimum 32 characters recommended)
# Generate using: openssl rand -base64 32
JWT_SECRET=

# Rate Limiting Configuration
# Maximum number of requests allowed per minute per client
# Helps prevent abuse and ensures fair usage
RATE_LIMIT_REQUESTS_PER_MINUTE=100
