  <!-- How It Works Section -->
  <section class="how-it-works" id="how-it-works">
    <div class="container">
      <h2 class="section-title">How x402 Works</h2>
      <p class="section-subtitle">Simple payment flow powered by VeChain blockchain</p>
      
      <div class="flow-diagram">
        <div class="flow-step">
          <div class="step-number">1</div>
          <div class="step-icon">üí≥</div>
          <h3>Create Payment</h3>
          <p>Customer initiates payment with their VeWorld or Sync2 wallet</p>
        </div>
        <div class="flow-arrow">‚Üí</div>
        <div class="flow-step">
          <div class="step-number">2</div>
          <div class="step-icon">‚úÖ</div>
          <h3>Verify</h3>
          <p>x402 validates payment payload and requirements</p>
        </div>
        <div class="flow-arrow">‚Üí</div>
        <div class="flow-step">
          <div class="step-number">3</div>
          <div class="step-icon">‚ö°</div>
          <h3>Settle</h3>
          <p>Transaction submitted to VeChain with optional fee delegation</p>
        </div>
        <div class="flow-arrow">‚Üí</div>
        <div class="flow-step">
          <div class="step-number">4</div>
          <div class="step-icon">üéâ</div>
          <h3>Confirm</h3>
          <p>Instant confirmation with transaction receipt</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features" id="features">
    <div class="container">
      <h2 class="section-title">Built for Developers</h2>
      <p class="section-subtitle">Everything you need to accept VeChain payments</p>
      
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">‚ö°</div>
          <h3>Fee Delegation</h3>
          <p>Optional gas fee sponsorship for seamless user experience. Users pay zero transaction fees.</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">ü™ô</div>
          <h3>Multi-Token Support</h3>
          <p>Accept VET, VTHO, VEUSD, and B3TR tokens natively without smart contract deployment.</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">üîí</div>
          <h3>Secure Verification</h3>
          <p>Cryptographic validation ensures payment integrity before settlement.</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">‚è±Ô∏è</div>
          <h3>Instant Settlement</h3>
          <p>Average settlement time under 2 seconds with VeChain's high throughput.</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">üåê</div>
          <h3>CAIP-2 Compliant</h3>
          <p>Industry-standard network identifiers for cross-chain compatibility.</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">üìä</div>
          <h3>Full Type Safety</h3>
          <p>End-to-end TypeScript support with Hono RPC client integration.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Code Example Section -->
  <section class="code-example">
    <div class="container">
      <h2 class="section-title">Quick Start</h2>
      <p class="section-subtitle">Integrate x402 in minutes with our simple API</p>
      
      <div class="code-tabs">
        <div class="code-window">
          <div class="code-header">
            <span class="code-title">example.ts</span>
          </div>
          <pre class="code-block"><code>import &#123; hc &#125; from 'hono/client'
import type &#123; AppType &#125; from 'x402-vechain'

// Initialize client
const client = hc&lt;AppType&gt;('https://api.x402.vet')

// Verify payment
const verification = await client.verify.$post(&#123;
  json: &#123;
    paymentPayload: encodedTx,
    paymentRequirements: &#123;
      paymentOptions: [&#123;
        network: 'eip155:100009', // VeChain testnet
        asset: 'VET',
        amount: '100',
        recipient: '0x742d35Cc...'
      &#125;],
      merchantId: 'your-merchant-id'
    &#125;
  &#125;
&#125;)

const &#123; isValid &#125; = await verification.json()

if (isValid) &#123;
  // Settle on-chain
  const receipt = await client.settle.$post(&#123; json &#125;)
  console.log('Payment confirmed!', receipt)
&#125;</code></pre>
        </div>
      </div>
    </div>
  </section>

  <!-- Supported Tokens Section -->
  <section class="tokens" id="tokens">
