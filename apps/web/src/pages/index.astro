<style>
  /* Navigation */
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid #e5e7eb;
  }
  
  :global(.dark) .nav {
    background: rgba(10, 10, 10, 0.9);
    border-bottom-color: #1f2937;
  }
  
  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: #8B5CF6;
  }
  
  .logo-vet {
    color: #15BDFF;
  }
  
  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }
  
  .nav-links a {
    text-decoration: none;
    color: #374151;
    font-weight: 500;
    transition: color 0.2s;
  }
  
  :global(.dark) .nav-links a {
    color: #d1d5db;
  }
  
  .nav-links a:hover {
    color: #8B5CF6;
  }
  
  .nav-cta {
    background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);
    color: white !important;
    padding: 0.5rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
  }
  
  .theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    color: #374151;
    transition: color 0.2s;
  }
  
  :global(.dark) .theme-toggle {
    color: #d1d5db;
  }
  
  .theme-toggle:hover {
    color: #8B5CF6;
  }
  
  .sun-icon {
    display: none;
  }
  
  .moon-icon {
    display: block;
  }
  
  :global(.dark) .sun-icon {
    display: block;
  }
  
  :global(.dark) .moon-icon {
    display: none;
  }
  
  /* Hero Section */
  .hero {
    padding: 6rem 2rem 4rem;
    text-align: center;
    background: linear-gradient(180deg, #f9fafb 0%, transparent 100%);
  }
  
  :global(.dark) .hero {
    background: linear-gradient(180deg, rgba(139, 92, 246, 0.05) 0%, transparent 100%);
  }
  
  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(139, 92, 246, 0.1);
    border: 1px solid rgba(139, 92, 246, 0.2);
    color: #8B5CF6;
    padding: 0.5rem 1rem;
    border-radius: 999px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 2rem;
  }
  
  .badge-pulse {
    width: 8px;
    height: 8px;
    background: #15BDFF;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  
  .hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1.5rem;
  }
  
  .hero-gradient {
    background: linear-gradient(135deg, #15BDFF 0%, #8B5CF6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    color: #4b5563;
    max-width: 700px;
    margin: 0 auto 2.5rem;
    line-height: 1.6;
  }
  
  :global(.dark) .hero-subtitle {
    color: #d1d5db;
  }
  
  .hero-ctas {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 4rem;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s;
  }
  
  .btn-primary {
    background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);
    color: white;
    box-shadow: 0 10px 25px rgba(139, 92, 246, 0.3);
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 35px rgba(139, 92, 246, 0.4);
  }
  
  .btn-secondary {
    background: white;
    color: #374151;
    border: 2px solid #e5e7eb;
  }
  
  :global(.dark) .btn-secondary {
    background: #1f2937;
    color: #e5e7eb;
    border-color: #374151;
  }
  
  .btn-secondary:hover {
    border-color: #8B5CF6;
    color: #8B5CF6;
  }
  
  .hero-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .stat {
    text-align: center;
  }
  
  .stat-value {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #15BDFF 0%, #8B5CF6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .stat-label {
    font-size: 0.875rem;
    color: #4b5563;
