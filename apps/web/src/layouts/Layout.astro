---
interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "x402 VeChain - Payment Protocol for Web3",
	description = "Instant, verifiable cryptocurrency payments on VeChain. Support for VET, VTHO, VEUSD, and B3TR with fee delegation and instant settlement."
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="x402, VeChain, cryptocurrency, payment protocol, VET, VTHO, VEUSD, B3TR, blockchain payments, web3" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://x402.vet/" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://x402.vet/" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
	</head>
	<body>
		<slot />
		
		<script is:inline>
			// Dark mode support
			const theme = (() => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
					return localStorage.getItem('theme');
				}
				if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
					return 'dark';
				}
				return 'light';
			})();
			
			if (theme === 'dark') {
				document.documentElement.classList.add('dark');
			} else {
				document.documentElement.classList.remove('dark');
			}
		</script>
	</body>
</html>

<style is:global>
	:root {
		--color-bg-light: #ffffff;
		--color-bg-dark: #0a0a0a;
		--color-text-light: #1a1a1a;
		--color-text-dark: #ffffff;
		--color-vechain-blue: #15BDFF;
		--color-x402-purple: #8B5CF6;
		--color-x402-purple-dark: #7C3AED;
		--color-gray-50: #f9fafb;
		--color-gray-100: #f3f4f6;
		--color-gray-200: #e5e7eb;
		--color-gray-300: #d1d5db;
		--color-gray-600: #4b5563;
		--color-gray-700: #374151;
		--color-gray-800: #1f2937;
		--color-gray-900: #111827;
	}
	
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		min-height: 100%;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
		background: var(--color-bg-light);
		color: var(--color-text-light);
		transition: background-color 0.3s ease, color 0.3s ease;
	}
	
	html.dark,
	html.dark body {
		background: var(--color-bg-dark);
		color: var(--color-text-dark);
	}
	
	* {
		box-sizing: border-box;
	}
</style>
